{
  "author"         : "Anderson Arboleya <me@nybras.com>",
  "name"           : "coffee-toaster",
  "description"    : "Minimalist dependency management system for coffee-script.",
  "version"        : "0.3.7",

  "repository"     : {
    "type"           : "git",
    "url"            : "http://github.com/serpentem/coffee-toaster"
  },

  "main"           : "./lib/toaster",
    "directories"    : {
    "lib"            : "./lib/"
  },
  "files"          : [
    "build"
  ],

  "bin"            : {
    "toaster"        : "./bin/toaster"
  },

  "scripts"        : {
    "test"           : "vows --spec tests/all.js"
  },
  
  "engines"        : {
    "node"           : ">= 0.4.9"
  },
  
  "dependencies"   : {
    "coffee-script"  : "1.x",
    "colors"         : "0.5.x",
    "optimist"       :"0.2.x"
  },

  "devDependencies": {
    "vows-bdd"       : "0.1.0",
    "vows"           :"0.5.11"
  }
}